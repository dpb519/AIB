{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "imageTemplateName": {
        "type": "string"
        },
        "api-version": {
          "type": "string"
        },
        "svclocation": {
            "type": "string"
        }
    },
    
    "variables": {
    },

    "resources": [
        {
            "type": "Microsoft.VirtualMachineImages/imageTemplates",
            "apiVersion": "2019-05-01-preview",
            "name": "AIB Deployment",
            "location": "West Europe",
            "tags":{
                "templateVersion" : "<imgTemplateName>"
            },
            "dependsOn": [],
            "properties": {
                "source": { 
                    "type": "ManagedImage", 
                        "imageId": "/subscriptions/c1bd9039-9169-41b6-9b75-6eef04aaf8a4/resourceGroups/CentralizedLabAccount-RG/providers/Microsoft.Compute/images/10-VM-image-iaas-tomcat-app-West-US-image"
                },
                "customize": [
                    {
                        "type": "Shell",
                        "name": "InstallUpgrades",
                        "inline": [
                            "sudo apt install unattended-upgrades"
                        ]
                    }
        
                ],
                "distribute": 
                    [
                        { 
                            "type": "VHD",
                            "runOutputName": "OutVHD",
                            "tags": {
                                "source": "azVmImageBuilder"
                            }
                        },
                        {   "type":"ManagedImage",
                            "imageId": "/subscriptions/c1bd9039-9169-41b6-9b75-6eef04aaf8a4/resourceGroups/CentralizedLabAccount-RG/providers/Microsoft.Compute/images/10-VM-image-iaas-tomcat-app-West-US-image-AIB-Patched",
                            "location": "West Europe",
                            "runOutputName": "OutmanagedImage",
                            "artifactTags": {
                                "source": "azVmImageBuilder"
                            }
                        }
                    ]
                }
            }
    ]
}    